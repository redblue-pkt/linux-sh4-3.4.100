/dts-v1/;
#include "stid127.dtsi"
#include "telss/lantiq_duslic.dtsi"

/ {
	model = "stid127 B2112";
	compatible = "st,stid127";
	memory{
		device_type = "memory";
		reg = <0x40000000 0x10000000>;
	};

	chosen {
		bootargs = "";
		linux,stdout-path = &asc2;
	};

	aliases {
		ttyAS0 = &asc2;
		usb0	= &usb0;
		spi0 = &telss_spi0;
	};

	soc {
		/* USB's */
		usb0: usb@fe800000{
			status = "okay";
		};

		asc2:uart@fe532000{
			status = "okay";
		};

		leds {
			compatible	= "gpio-leds";
			fp_led {
				label	= "Front Panel LED";
				gpios	= <&PIO19 6 0>;
				linux,default-trigger	= "heartbeat";
			};
		};

		pwm0: pwm@fe510000{
			status = "okay";

			out {
				out-channel@0 {
					status = "okay";
				};
			};
		};

		spifsm:	spifsm@fe302000{
			status		= "okay";
			flash-name	= "n25q256";
			partitions	= <&b2112_fsm_partitions>;

			b2112_fsm_partitions: partitions-b2112 {
				#address-cells = <1>;
				#size-cells = <1>;
				partition@0 {
					label = "Serial Flash 1";
					reg = <0x00000000 0x00500000>;
				};
				partition@500000{
					label = "Serial Flash 2";
					reg = <0x00500000 0x01b00000>;
				};
			};
		};

		/*
		---------------------------------------------------------------
		On b2112-A the following changes are required for having the
		SYNP MAC working:

		1) Move RE16 to RE9.
		2) Move RE19 to RE12.
		3) Fit 1K5 to R166 and R287.
		4) Remove R379, R393,R394 for Alicante Cut 1.0
		5) Fit R162

		---------------------------------------------------------------
		On b2112-B no HW changes are required.
		---------------------------------------------------------------
		*/
		ethernet0:ethernet@feb00000 {
			status = "okay";
			phy-mode	= "rgmii";
			snps,phy-bus-name = "stmmac";
			snps,phy-bus-id = <0>;
			snps,phy-addr = <0>;
			device-config = <&rgmii0_dev_config>;

			snps,reset-gpio = <&PIO21 2 0>;
			snps,reset-active-low;
			snps,reset-delays-us = <0 10000 10000>;
		};

		stmfp:ethernet@fee80000 {
			status = "okay";
			device-config = <&fprgmii_dev_config>;
			phy-mode = "rgmii";

			fpdocsis{
				st,phy-bus-name = "fixed";
				st,phy-bus-id = <0>;
				st,phy-addr = <2>;
			};

			fpgige0{
				st,phy-bus-name = "fixed";
				st,phy-bus-id = <0>;
				st,phy-addr = <3>;
			};

			fpgige1{
				st,phy-bus-name = "stmmac";
				st,phy-bus-id = <0>;
				st,phy-addr = <1>;
			};
		};

		miphy0: miphy@fef24000 {
			status = "okay";
			miphy-modes	= "pcie";
		};
		pcie0: pcie@fef20000{
			status = "okay";
		};
		miphy1: miphy@fef34000 {
			status = "okay";
			miphy-modes	= "pcie";
		};
		pcie1: pcie@fef30000{
			status = "okay";
		};
		 telss_spi0: telss-spi0{
			status = "okay";
		};

		snd_tdm_player0: snd-uni-tdm@0xfeba4000 {
			compatible	= "st,snd_uni_tdm";
			status		= "okay";
			padcfg-names	= "default";
			padcfg-0	= <&padcfg_lantiq_duslic_player0>;
			hw-config	= <&snd_tdm_lantiq_duslic_config>;
		};

		snd_tdm_reader0: snd-uni-tdm@0xfeba5000 {
			compatible	= "st,snd_uni_tdm";
			status		= "okay";
			padcfg-names	= "default";
			padcfg-0	= <&padcfg_lantiq_duslic_reader0>;
			hw-config	= <&snd_tdm_lantiq_duslic_config>;
		};

		snd_telss_glue: snd-telss-glue {
			compatible	= "st,snd_telss_glue";
			status		= "okay";
		};
	};
};
